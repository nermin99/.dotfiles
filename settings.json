{
    /* editor font & text */
    "editor.fontFamily": "OperatorMono Nerd Font",
    "editor.fontWeight": "bold",
    "editor.fontSize": 15,
    "editor.lineHeight": 21,
    /* editor tabs & snippets */
    "editor.tabSize": 2,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "top",
    "editor.rulers": [
        80,
    ],
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    /* explorer */
    "explorer.openEditors.visible": 0,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    /* workbench */
    "workbench.colorTheme": "Cobalt2",
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": false,
    /* files */
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    /* GIT */
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "diffEditor.ignoreTrimWhitespace": false,
    /* Wes Bos formating & auto-save */
    "editor.formatOnSave": true,
    /* tell ESLint to run on save */
    "editor.codeActionsOnSave": {
        // "source.fixAll": true
    },
    /* let ESLint format JS instead of VSCode */
    "[javascript]": {
        "editor.formatOnSave": false
    },
    /* let ESLint format JS instead of prettier */
    "prettier.disableLanguages": [
        "js"
    ],
    /* let VSCode format HTML instead of prettier */
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    /* StandardJS */
    "javascript.validate.enable": false,
    "standard.run": "onType",
    "standard.autoFixOnSave": true,
    "window.zoomLevel": 0,
    /* RANDOM */
}
